---
import Footer from './Footer.astro';
import Header from './Header.astro';
import StructureData from './StructureData.astro';
import CenterContainer from './containers/CenterContainer.astro';

export interface Props {
  title: string;
  description: string;
}

let { title, description } = Astro.props as Props;
title = title || 'KeyakiDentalClinic - Japanese high quality dental clinic';
description =
  description ||
  'KeyakiDentalClinic delivers best in town dental service with Japanese quality in Hanoi.';

const logoAbsolutedUrl = `https://KeyakiDentalClinic.com/img/logo.png`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=5.0"
    /> -->
    <meta name="viewport" content="width=1280" />

    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title}</title>

    <meta name="theme-color" content="#ffc02e" />

    <link rel="dns-prefetch" href="//KeyakiDentalClinic.com" crossorigin />
    <link rel="preconnect" href="//KeyakiDentalClinic.com" />
    <link rel="preconnect" href="//KeyakiDentalClinic.com" crossorigin />

    <link rel="dns-prefetch" href="//googletagmanager.com" crossorigin />
    <link rel="preconnect" href="//googletagmanager.com" />
    <link rel="preconnect" href="//googletagmanager.com" crossorigin />

    <!-- IMPORTANT ============ SEO -->
    <link rel="canonical" href="//KeyakiDentalClinic.com/" />
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="Keyaki,Dental,Clinic,best in town,dental service,Japanese,quality,Hanoi"
    />

    <meta name="msapplication-TileColor" content="#ffc02e" />

    <!-- Meta data for visual-elements in social platform Facebook, Twitter -->
    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="KeyakiDentalClinic website" />
    <meta property="og:url" content="https://KeyakiDentalClinic.com" />
    <meta property="og:description" content={description} />
    <meta
      property="og:image"
      itemprop="image primaryImageOfPage"
      content={logoAbsolutedUrl}
    />

    <meta name="twitter:card" content="summary" />
    <meta name="twitter:domain" content="KeyakiDentalClinic.com" />
    <meta
      name="twitter:title"
      property="og:title"
      itemprop="name"
      content={title}
    />
    <meta
      name="twitter:description"
      property="og:description"
      itemprop="description"
      content={description}
    />
    <meta name="twitter:site" content="KeyakiDentalClinic" />
    <meta name="twitter:image:src" content={logoAbsolutedUrl} />
  </head>

  <body>
    <CenterContainer>
      <Header />

      <slot />

      <Footer />
    </CenterContainer>

    <!-- Google tag (gtag.js) -->
    <script defer src="https://www.googletagmanager.com/gtag/js?id=G-E0L9PZK0M2"
    ></script>
    <script defer>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());
      gtag('config', 'G-E0L9PZK0M2');
    </script>

    <StructureData />
  </body>
</html>

<style is:global>
  /* By default, Astro automatically scopes <style> CSS rules to the component. 
  You can opt-out of this behavior with the is:global directive. */
  :root {
    --font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
    --font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
    --font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

    --color-text: hsl(12, 5%, 4%);
    --color-bg: #f7f4f3;
  }

  html,
  body {
    width: 100%;
    height: 100%;
  }

  html {
    font-family: system-ui, sans-serif;
    font-size: var(--font-size-base);
    color: var(--color-text);
    background-color: var(--color-bg);
  }

  body {
    margin: 0;
    font-family: Segoe UI, sans-serif;
  }

  h1 {
    font-size: var(--font-size-xl);
  }

  h2 {
    font-size: var(--font-size-lg);
  }

  code {
    font-family: Consolas, monospace;
  }

  a {
    padding: 0.5rem 1rem;
    border-radius: 1rem;
    background-color: beige;

    cursor: pointer;

    text-decoration: none;

    background-size: 0 100%;
    background-position: 0 100%;
    background-repeat: no-repeat;
    transition: background-size 0.3s ease-in-out;
    background-image: linear-gradient(transparent, beige),
      linear-gradient(rgb(168, 168, 152), beige);
  }

  /* on hovering, animate the background */
  a:hover {
    background-size: 100% 100%;
    background-position: 0 100%;
  }

  .m-1 {
    margin: 1rem;
  }
  .mb-1 {
    margin-bottom: 1rem;
  }
  .mb-3 {
    margin-bottom: 3rem;
  }
  .hidden {
    display: none;
  }
</style>
