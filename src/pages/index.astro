---
import Layout from '../components/Layout.astro';
import FeedbackForm from '../components/FeedbackForm.astro';
---

<Layout title="Keyaki Dental Clinic">
  <main>
    <div class="header">
      <h1><a href="/">Keyaki Dental Clinic</a></h1>
    </div>
    <div class="intro">
      Floor 2nd, S2 Tower, <a
        href="https://www.google.com/maps/place/Sun+Plaza+Th%E1%BB%A5y+Khu%C3%AA/@21.0404572,105.8264387,15z/data=!4m2!3m1!1s0x0:0xdfc0be5ac8ed0c79?sa=X&ved=2ahUKEwj_q5fE44X9AhUBfd4KHYzDA9EQ_BJ6BAhMEAg"
        >Sun Grand City Thụy Khuê</a
      >, Hà Nội

      <div style="width: 100%">
        <iframe
          width="100%"
          height="500"
          frameborder="0"
          scrolling="no"
          marginheight="0"
          marginwidth="0"
          src="https://maps.google.com/maps?width=100%25&height=500&hl=en&q=Sun%20Plaza%20Thu%E1%BB%B5%20Khu%C3%AA,%20H%C3%A0%20N%E1%BB%99i+(Keyaki%20Dental%20Clinic)&t=&z=14&ie=UTF8&iwloc=B&output=embed"
          ><a href="https://www.maps.ie/distance-area-calculator.html">measure
          area map</a></iframe
        >
      </div>
    </div>

    <div>
      <img alt="Official Zalo QR" src="/img/zalo-qr.png" style="width:20rem" />
    </div>

    <hr />

    <FeedbackForm />

    <footer class="footer">
      Made with&nbsp;<a href="https://gurucore.com" class="mx-5">Gurucore</a> &nbsp;
      <a class="" href="/api/joke" title=" by Netlify functions">2023</a>
    </footer>
  </main>
</Layout>

<style>
  :root {
    text-align: center;
  }

  main {
    padding: 0rem 20px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin: 0 auto;
    max-width: 80ch;
    align-items: center;
  }

  footer {
    width: 100%;
    height: 100px;
    border-top: 1px solid #eaeaea;
    display: flex;
    justify-content: center;
    align-items: center;
  }
</style>
